											<option  value="" selected>Экология и рациональное природопользование</option>
											<option value="" >пункт 2</option>
										</select>
								.form__block
										label
											b Название учебного заведения
											input(type="text", name="" placeholder="Название учебного заведения")
								.form__block-double
									.form__block
										label
											b Год окончания
											<select class="js-example-form ">
												<option  value="" selected> ... </option>
												<option  value="">пункт 1</option>
												<option value="" >пункт 2</option>
											</select>
									.form__block.not-selected
										label
											b Курс обучения
											<select class="js-example-form ">
												<option  value="" selected> ... </option>
												<option  value="">пункт 1</option>
												<option value="" >пункт 2</option>
											</select>
								.form__block-double
									.form__block
										label
											b Наличие ученой степени
											<select class="js-example-form ">
												<option  value="" selected> ... </option>
												<option  value="">пункт 1</option>
												<option value="" >пункт 2</option>
											</select>
									.form__block.not-selected
										label
											b Год окончания
											<select class="js-example-form ">
												<option  value="" selected> ... </option>
												<option  value="">пункт 1</option>
												<option value="" >пункт 2</option>
											</select>
								.form__block
									label
										b.label Место работы / учебы
										input(type="text", name="" placeholder="Название учебного заведения / название компании")
								.form__block-double
									.form__block
										label
											b Должность
											input(type="text", name="" placeholder="Название должности")
									.form__block
										label
											b.label Стаж
											<select class="js-example-form ">
												<option  value="" selected> ... </option>
												<option  value="" >пункт 2</option>
												<option value="" >пункт 2</option>
											</select>
								.form__block.form__block--customer
									.form__block__title Вы являетесь заказчиком и слушателем одновременно?
									<div class="selectDot">
										<div class="selectDot--label">
											<label>
												<input type="radio" name="selectDot__input--customer" checked="">
												<b></b>
												<span>Да</span>
										</label>
										<label>
												<input type="radio" name="selectDot__input--customer">
												<b></b>
												<span>Нет</span>
										</label>
										</div>
									</div>
								.form__block.form__block--assent
