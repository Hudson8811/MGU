	include ../../blocks/modules/headerMenu/headerMenu
	include ../../blocks/modules/breadcrumbs/breadcrumbs
	.form-page
		.container
			h2.form-page__title Анкета слушателя
			.form-page__layout.form
				.form-page__layout--left
					.form__title Дополнительная профессиональная программа

				.form-page__layout--right
					.form__feedback.form__feedback--program
						form
							.form__block__wrap
								.form__block
									label
										b Направление
										<select class="js-example-form ">
											<option  value="" selected> ... </option>
											<option  value="" selected>Экология</option>
											<option value="" >пункт 2</option>
										</select>
								.form__block
									label
										b Программа
										<select class="js-example-form ">
											<option  value="" selected> ... </option>
											<option  value="" selected>Экология и рациональное природопользование</option>
											<option value="" >пункт 2</option>
										</select>
								.form__block
									<div class="selectDot">
										<div class="selectDot--label">
											<label>
												<input type="radio" name="selectDot__input--deal" checked="">
												<b></b>
												<span>очная</span>
										</label>
										<label>
												<input type="radio" name="selectDot__input--deal">
												<b></b>
												<span>очно-заочная</span>
										</label>
										<label>
												<input type="radio" name="selectDot__input--deal">
												<b></b>
												<span>заочная</span>
										</label>
										</div>
									</div>

		.form-page__line
		.container
			.form-page__layout.form
				.form-page__layout--left
					.form__title
						!="Информация <br>о слушателе"
				.form-page__layout--right
					.form__feedback.form__feedback--customer
						form
							.form__block__wrap
								.form__block
									label
										b Фамилия
										input(type="text" placeholder="Фамилия")
								.form__block
									label
										b Имя
										input(type="text" placeholder="Имя")
								.form__block
									label.error
										b Отчество
										input(type="text" placeholder="Отчество")
										.form-error-text Информация об ошибке или незаполненном поле
								.form__block-double
									.form__block.form__block--date
										label
											b Дата рождения
											input#date-picker(type="text")
									.form__block
										label
											b.label СНИЛС
											input(type="text" placeholder="ХХХ-ХХХ-ХХХ YY")
								.form__block-double
									.form__block
										label
											b E-mail
											input(type="email", name="" placeholder="адрес электронной почты")
									.form__block
										label
											b Телефон
											input(type="tel", name="" placeholder="+7 (000) 000 00 00 ")
								.form__block
